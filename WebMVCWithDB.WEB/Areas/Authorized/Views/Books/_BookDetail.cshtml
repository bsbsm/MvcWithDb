
@model WebMVCWithDB.WEB.Areas.Authorized.Models.Books.MainBook

<div id="BookDetail_@Model.Id" class="table-responsive" >
    <div>
       
        <input value="Edit this book" type="button" id="detailButton" onclick="window.location='@Url.Action("Edit", "Books", new { area = "Authorized", id = Model.Id})';" />
    </div>
    <div>
        <table style="width:100%">
            <tr>
                <td style="width:25%">
                    Title:
                </td>
                <td>
                    @Model.Title
                </td>
            </tr>
            <tr>
                <td>
                    Author:
                </td>
                <td>
                    @Model.Author
                </td>
            </tr>
            <tr>
                <td>
                    Genre:
                </td>
                <td>
                    @Model.Genre
                </td>
            </tr>
            <tr>
                <td>
                    Description:
                </td>
                <td>
                    @Model.Description
                </td>
            </tr>
        </table>
    </div>
</div>