@model WebMVCWithDB.WEB.Areas.Authorized.Models.Books.MainBook
@{
    ViewBag.Title = "Book";
    Layout = "~/Areas/Authorized/Views/Shared/_Layout.cshtml";
}

<h2>Book </h2>

<div>
    @Html.RouteLink("Edit this", "Authorized_default", new { action = "Edit", id = Model.Id })
</div>
<div>
    <table>
        <tr>
            <td>
                Title:
            </td>
            <td>
                @Model.Title
            </td>
        </tr>
        <tr>
            <td>
                Author:
            </td>
            <td>
                @Model.Author
            </td>
        </tr>
        <tr>
            <td>
                Genre:
            </td>
            <td>
                @Model.Genre
            </td>
        </tr>
        <tr>
            <td>
                Description:
            </td>
            <td>
                @Model.Description
            </td>
        </tr>
    </table>
